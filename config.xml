<?xml version='1.0' encoding='utf-8'?>
<widget id="tuwien.cartography.emomap" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EmoMap</name>
    
    <description>
        EmoMap (Emotional Mapping) Mobile Application
    </description>
    
    <author email="apps@cartography.tuwien.ac.at" href="http://cartography.tuwien.ac.at/">
        TU Wien, Research Group Cartography
    </author>
    
    <content src="index.html" />
    
    <plugin name="cordova-plugin-whitelist" version="1" />
    
    <access origin="*" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	<preference name="Orientation" value="portrait" />
	<preference name="DisallowOverscroll" value="true"/>
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
